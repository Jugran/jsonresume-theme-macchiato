{{#if resume.education.length}}
<div class="container education-container">
    {{> title value="Education"}} {{#each resume.education}}
    <section class="item">
        {{#if studyType}}
            {{#if area}}
                {{> section-header name=(concat this.studyType  ' In ' this.area) }}
            {{else}}
                {{> section-header name=(concat this.studyType) }}
            {{/if}}
        {{/if}}

        <div class="flex-container">
            {{#if institution}}
                <h4> {{institution}}</h4>
            {{/if}}

            {{#if location}}
                <h5 class="location">{{location}}</h5>
            {{/if}}
        </div>

        {{#if gpa}}
        <h5>{{gpa}}</h5>
        {{/if}} {{#if specialization}}
        <h5 class="specialization">{{specialization}}</h5>
        {{/if}} {{#if courses.length}}
        <ul class="two-column">
            {{#each courses}}
            <li>{{.}}</li>
            {{/each}}
        </ul>
        {{/if}}
    </section>
    {{/each}}
</div>
{{/if}}